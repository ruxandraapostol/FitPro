@model FitPro.BusinessLogic.ForgotPasswordModel


<div class="container home-container">
    <div class="row">
        <div class="col my-auto">
            <div class="text-center" style="margin-bottom: 2rem">
                <div class="display-4">Forgot Password?</div>
                <p>We will email instructions on how to reset your password.</p>
            </div>
            <form asp-action="ForgotPassword" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn brown-btn" />
                </div>
            </form>

            <div class="text-center">
                <a asp-action="Login"><div class="brown-text">Back to login.</div></a>
                <a asp-controller="Home" asp-action="Index"><div class="brown-text">Back to Home.</div></a>
            </div>
        </div>
        <div class="col">
            <div class="float-right">
                <div class="brown-container">
                    <img src="~/image/deleteProfile.jpg" id="login-image"/>"
                </div>
            </div>
        </div>
    </div>
</div>

