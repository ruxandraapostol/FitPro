@model FitPro.BusinessLogic.AddRecipeModel

<div class="home-container text-center">
    <div class="display-4">Add Recipe</div>
</div>

<div class="container home-container">
    <div class="row">

        <div class="col">
            <div class="brown-container">
                <img src="~/image/addAliment.jpg" id="home-image" />
            </div>
        </div>

        <div class="col my-auto">
            <form asp-action="AddRecipe" asp-controller="Nutritionist" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Calories" class="control-label"></label>
                    <input asp-for="Calories" class="form-control" />
                    <span asp-validation-for="Calories" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Time" class="control-label"></label>
                    <input asp-for="Time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AlimentsList" class="control-label">Ingredients(please enter one per line)</label>
                    <textarea asp-for="AlimentsList" class="form-control"> </textarea>
                    <span asp-validation-for="AlimentsList" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Preparation" class="control-label"></label>
                    <textarea asp-for="Preparation" class="form-control"></textarea>
                    <span asp-validation-for="Preparation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCategory" class="control-label"></label>
                    <select id="select-categories" asp-for="IdCategory" class="form-control" asp-items="@(new SelectList(@Model.Categories, "Value", "Text"))"></select>
                    <span asp-validation-for="IdCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NutritionistPassword" class="control-label"></label>
                    <input asp-for="NutritionistPassword" type="password" class="form-control" />
                    <span asp-validation-for="NutritionistPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Recipe" class="btn brown-btn" />
                </div>
            </form>


        </div>
    </div> \
    <div class="text-center">
        <a asp-controller="Nutritionist" asp-action="NutritionistRecipesList"><div class="crem-text">Back to Recipess List.</div></a>
        <a asp-controller="Home" asp-action="Index"><div class="brown-text">Back to home.</div></a>
    </div>
</div>