@model FitPro.BusinessLogic.DeleteRecipeModel


<div class="home-container">
    <form asp-action="DeleteAliment" asp-controller="Nutritionist">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col">
                <div class="text-center">
                    <div class="display-4">Delete Alimewnt</div>
                </div>

                <p>Unfortunately you don't have permission to delete this recipe.</p>


                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NutritionistPassword" class="control-label"></label>
                    <input asp-for="NutritionistPassword" type="password" class="form-control" />
                    <span asp-validation-for="NutritionistPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Delete Recipe" class="btn brown-btn" />
                </div>

                <div class="text-center">
                    <a asp-controller="Nutritionist" asp-action="AlimentsList" asp-route-currentPage="1"><div class="crem-text">Back to Recipes List.</div></a>
                    <a asp-controller="Home" asp-action="Index"><div class="brown-text">Back to home.</div></a>
                </div>
            </div>


            <div class="col">
                <div class="float-right">
                    <div class="brown-container">
                        <img src="~/image/food2.jpg" id="login-image" />
                    </div>
                </div>
            </div>
        </div>

    </form>
</div>