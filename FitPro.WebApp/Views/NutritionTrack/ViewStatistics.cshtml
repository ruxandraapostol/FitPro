@inject FitPro.Entities.DropDowns DropDown
@model FitPro.BusinessLogic.StatisticsModel

<div class="container home-container">

    <input id="month" value="@Model.Month" hidden/>
    <input id="year" value="@Model.Year" hidden/>

    <div class="display-4 text-center">Calendar View</div>
    <div class="display-6 text-center">~@Model.Month @Model.Year~</div>

    <div class="">
        <span>Choose the wanted macronutrient for statistics: </span>
        <select 
            id="macronutrientSelect" 
            asp-items="@DropDown.Macronutrients"
            onchange="selecetMacroChange()">
        </select>
    </div>

    <div class="home-container">
        <p>Month statistics</p>
        <canvas id="monthlyChart" style="width:100%;max-width:600px"></canvas>
    </div>

    <div class="home-container">
        <p>Year statistics</p>
        <canvas id="yearlyChart" style="width:100%;max-width:600px"></canvas>
    </div>

    <div class="text-center">

        <a asp-controller="NutritionTrack"
           asp-action="NavigateMonthStatistics"
           asp-route-year="@Model.Year"
           asp-route-monthName="@Model.Month"
           style="max-height: 38px"><div>Next Month</div></a>

        <a asp-controller="NutritionTrack"
           asp-action="NavigateMonthStatistics"
           asp-route-prev="@true"
           asp-route-year="@Model.Year"
           asp-route-monthName="@Model.Month"
           style="max-height: 38px"><div>Previous Month</div></a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.min.js"></script>
    <script src="@Url.Content("/js/NutritionTrack/Statistics.js")" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}